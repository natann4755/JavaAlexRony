        <Button text="0" prefWidth="105" fx:id="a0" onAction="#rite"></Button>
        <Button text="=" prefWidth="50" fx:id="sum" onAction="#outcome"></Button>
        <Button text="+" prefWidth="50" fx:id="plus" onAction="#Actions"></Button>
    </HBox>
    <HBox GridPane.rowIndex="6" GridPane.columnIndex="0" spacing="5">

        <Button text="C" prefWidth="50"  onAction="#ricet"></Button>

    </HBox>

