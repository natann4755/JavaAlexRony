    <TextField fx:id="Colcol" GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="40" ></TextField>
    <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="5">
        <Button text="7" prefWidth="50" fx:id="a7" onAction="#rite"></Button>
        <Button text="8" prefWidth="50" fx:id="a8" onAction="#rite"></Button>
        <Button text="9" prefWidth="50" fx:id="a9" onAction="#rite"></Button>
        <Button text="/" prefWidth="50" fx:id="chiluk" onAction="#Actions"></Button>
    </HBox>
    <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" spacing="5">
        <Button text="4" prefWidth="50" fx:id="a4" onAction="#rite"></Button>
        <Button text="5" prefWidth="50" fx:id="a5" onAction="#rite"></Button>
